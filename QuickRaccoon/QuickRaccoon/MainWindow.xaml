<Window x:Class="QuickRaccoon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickRaccoon" 
        xmlns:mainwindow="clr-namespace:QuickRaccoon.ViewModels.MainWindow" 
        d:DataContext="{d:DesignInstance Type=mainwindow:MainVM}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="No personal data" Width="250" Height="50" />

        <Button Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Enter personal data" Width="250" Height="50" />

    </Grid>
</Window>
