<UserControl x:Class="QuickRaccoon.Views.UserControls.QRCode_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuickRaccoon.Views.UserControls" 
             xmlns:util="clr-namespace:QuickRaccoon.Views.Utilities"
             xmlns:qrcode="clr-namespace:QuickRaccoon.ViewModels.QRCode" 
             d:DataContext="{d:DesignInstance Type=qrcode:QRCodeVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Image x:Name="QRCode_QRPicture_Image" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Source="{Binding QRCode }"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button x:Name="QRCode_Print_Button" Content="{util:Localizer}" Command="{Binding PrintQRCodeCommand }"/>

            <Button x:Name="QRCode_Finished_Button" Content="{util:Localizer}" Command="{Binding QRCodeGenerationFinishedCommand }"/>
        </StackPanel>
    </Grid>
</UserControl>
